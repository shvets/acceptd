<div class="container" ng-app="app">

  <div class="panel panel-primary">
    <div class="panel-heading text-center">
      <h1><i><b>Acceptd</b></i> Control Center</h1>
    </div>

    <form ng-controller="ScriptParamsController as scriptParamsCtrl">
      <div class="panel-body">
        <section class="well">
          <div class="row">
            <div class="col-lg-3 h3">
              <label>
                Configuration
              </label>
            </div>

            <div class="col-lg-2 h3">
              <button class="btn btn-info" ng-click="scriptParamsCtrl.load()">Load</button>
            </div>

            <div class="col-lg-2 h3">
              <button class="btn btn-info" ng-click="scriptParamsCtrl.save()">Save</button>
            </div>

          </div>
        </section>

        <section class="well">
          <div class="row">
            <div class="col-lg-3 h3">
              <label>
                Project
              </label>
            </div>

            <div class="col-lg-9 h3">
              <select ng-model="scriptParams.selectedProject" class="form-control"
                      ng-options="project for project in scriptParams.projects">
              </select>
            </div>
          </div>
        </section>

        <section class="well">
          <div class="row">
            <div class="col-lg-3 h3">
              <label>
                Web Application URL
              </label>
            </div>

            <div class="col-lg-9 h3">
              <input type="url" ng-model="scriptParams.webapp_url" class="form-control" placeholder="URL of web site you want to test"/>
            </div>
          </div>
        </section>

        <section class="well">
          <div class="row">
            <div class="col-lg-3 h3">
              <label>
                Timeout in seconds
              </label>
            </div>

            <div class="col-lg-2 h3">
              <input type="text" ng-model="scriptParams.timeout_in_seconds" class="form-control" placeholder="Timeout in seconds"/>
            </div>
          </div>
        </section>

        <section class="well">
          <div class="row">

            <div class="col-lg-3 h3">
              <label>
                Browser
              </label>
            </div>

            <div class="col-lg-4">
              <div class="radio">
                <label>
                  <input type="radio" ng-model="scriptParams.browser" ng-checked="scriptParams.browser == 'firefox'">
                  Firefox
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" ng-model="scriptParams.browser" ng-checked="scriptParams.browser == 'chrome'">
                  Chrome
                </label>
              </div>
            </div>
          </div>
        </section>

        <section class="well">
          <div class="row">
            <div class="col-lg-3 h3">
              <label>
                Driver
              </label>
            </div>

            <div class="col-lg-4">
              <div class="radio">
                <label>
                  <input type="radio" ng-model="scriptParams.driver" ng-checked="scriptParams.driver == 'selenium'">
                  Selenium
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" ng-model="scriptParams.driver" ng-checked="scriptParams.driver == 'webkit'">
                  Webkit
                </label>
              </div>
            </div>
          </div>
        </section>

        <section class="well">
          <h3>Selected Tests</h3>

          <span id="helpBlock" class="help-block">Select acceptance script(s) you want to run.</span>

          <div class="row">
            <div class="col-lg-6">
              <select ng-model="scriptParams.selectedFiles" class="form-control"
                      ng-options="file for file in scriptParams.files" multiple>
              </select>
            </div>
            <div class="col-lg-2">
              <button class="btn btn-primary btn-block" ng-click="scriptParamsCtrl.run_script()">Run</button>

              <!--<div class="progress">-->
                <!--<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">-->
                  <!--<span class="sr-only">20% Complete</span>-->
                <!--</div>-->
              <!--</div>-->
            </div>
          </div>
        </section>
      </div>
    </form>

  </div>

</div>
