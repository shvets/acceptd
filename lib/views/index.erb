<div class="container" ng-app="app">

  <div class="panel panel-primary">
    <div class="panel-heading text-center">
      <h1><i><b>Acceptd</b></i> Control Center</h1>
    </div>

    <div class="panel-body">
      <section class="well">
        <h3>Web Application URL</h3>

        <div class="row">
          <div class="col-lg-6">
            <input type="url" name="webapp_url" class="form-control" placeholder="URL of web site you want to test" value="<%= webapp_url %>"/>
          </div>
        </div>
      </section>

      <section class="well">
        <h3>Browser</h3>

        <div class="row">
          <div class="col-lg-4">
            <div class="radio">
              <label>
                <input type="radio" name="browser" value="firefox" <%= checked(browser, 'firefox') %>>
                Firefox
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="browser" value="chrome" <%= checked(browser, 'chrome') %>>
                Chrome
              </label>
            </div>
          </div>
        </div>
      </section>

      <section class="well">
        <h3>Driver</h3>

        <div class="row">
          <div class="col-lg-4">
            <div class="radio">
              <label>
                <input type="radio" name="driver" value="selenium" <%= checked(driver, 'selenium') %>>
                Selenium
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="driver" value="webkit" <%= checked(driver, 'chrome') %>>
                Webkit
              </label>
            </div>
          </div>
        </div>
      </section>

      <section class="well">
        <h3>Timeout in seconds</h3>

        <div class="row">
          <div class="col-lg-2">
            <input type="text" class="form-control" name="timeout_in_seconds" placeholder="Timeout in seconds" value="<%= timeout_in_seconds %>"/>
          </div>
        </div>
      </section>

      <section class="well">
        <h3>Selected Tests</h3>

        <span id="helpBlock" class="help-block">Select acceptance script(s) you want to run.</span>

        <div class="row">
          <div class="col-lg-6">
            <select class="form-control" multiple>
              <% files.each do |file| %>
                <option value="one"><%= file %></option>
              <% end %>
            </select>
          </div>
          <div class="col-lg-2">
            <form action="/run">
              <button type="submit" class="btn btn-primary btn-block">Run</button>

              <div class="progress">
                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                  <span class="sr-only">20% Complete</span>
                </div>
              </div>
            </form>
          </div>

          <div class="col-lg-2">
            <button class="btn btn-info">Load Configuration</button>
          </div>

          <div class="col-lg-2">
            <button class="btn btn-info">Save Configuration</button>
          </div>

          <div ng-controller="MainController as mainCtrl">
            <button ng-click="mainCtrl.get()">GET</button>
            Result : {{result}}
          </div>

        </div>
      </section>
    </div>

  </div>

</div>
