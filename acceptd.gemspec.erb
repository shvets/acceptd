# -*- encoding: utf-8 -*-

require File.expand_path(File.dirname(__FILE__) + '/lib/acceptd/version')

Gem::Specification.new do |spec|
  spec.name          = "acceptd"
  spec.summary       = %q{Sinatra application for running acceptance tests.}
  spec.description   = %q{Description: Sinatra application for running acceptance tests.}
  spec.email         = "alexander.shvets@gmail.com"
  spec.authors       = ["Alexander Shvets"]
  spec.homepage      = "http://github.com/shvets/acceptd"

  spec.files         = `git ls-files`.split($\)
  spec.test_files    = spec.files.grep(%r{^(test|spec|features)/})
  spec.bindir        = "bin"
  spec.executables   = ['acceptd']
  spec.require_paths = ["lib"]
  spec.version       = Acceptd::VERSION
  spec.license       = "MIT"

  <%= project_dependencies %>
end

